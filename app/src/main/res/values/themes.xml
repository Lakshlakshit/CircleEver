<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.CircleEver" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.CircleEver.Fullscreen" parent="Theme.CircleEver">
        <item name="android:actionBarStyle">@style/Widget.Theme.CircleEver.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.CircleEver.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="Theme.CircleEver.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CircleEver.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CircleEver.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>